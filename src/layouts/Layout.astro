---
import { basics } from "@cv"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary, url } = basics
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* 1. RESET & BOX MODEL */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html {
    font-family: "Roboto Slab", serif;
    background: #fffef1;
    letter-spacing: -0.01rem;
    overflow-x: hidden;
  }

  body {
    margin: 0;
    padding: 0;
    width: 100%;
    overflow-x: hidden;
  }

  /* 2. LAYOUT CONTAINERS */
  main, section {
    max-width: 800px;
    margin: 0 auto;
    padding-inline: 16px;
    width: 100%;
  }

  /* 3. PROJECT GRID - EQUAL HEIGHT FIX */
  ul, .projects-container { 
    display: grid;
    /* responsive columns: min 200px, otherwise 1 column */
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    /* Force all cells in a row to be the same height */
    grid-auto-rows: 1fr; 
    gap: 16px;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  /* Force list items and their children to fill the height */
  ul li {
    display: flex;
    height: 100%;
  }

  /* This ensures the 'article' (where your lines likely are) expands fully */
  ul li > article, 
  ul li > a {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%; 
    min-width: 0;
  }

  /* 4. GENERAL STYLING */
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  h1, h2, h3, h4 {
    margin: 0;
    font-family: "Roboto Slab", serif;
  }

  p {
    color: #666;
    font-size: 0.9em;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  /* 5. PRINT STYLES */
  .print {
    display: none !important;
  }

  @media print {
    .no-print { display: none !important; }
    .print { display: block !important; }
    astro-dev-toolbar { display: none !important; }
    article { break-inside: avoid; }
  }
</style>